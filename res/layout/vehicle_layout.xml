<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/pantalla_principal_blanco"
	android:orientation="vertical"
	android:paddingLeft="8dp"
	android:paddingRight="8dp"
	android:paddingTop="10dp"
	tools:context="com.datumdroid.android.ocr.simple.VehiculoActivity" >

	<!-- Screen Design -->

	<LinearLayout
		android:id="@+id/lytitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="-5dp"
		android:orientation="horizontal"
		android:visibility="visible" >

		<TextView
			android:id="@+id/texttitle"
			android:layout_width="wrap_content"
			android:layout_height="51dp"
			android:layout_marginLeft="200dp"
			android:layout_marginTop="25dp"
			android:hint="Datos del vehículo"
			android:text="Módulo de Ajustes del Vehículo"
			android:textAppearance="?android:attr/windowTitleStyle"
			android:textColor="@drawable/red"
			android:textSize="44sp"
			android:textStyle="bold"
			android:visibility="invisible" />
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/exit_button_view2"
		android:layout_width="900dp"
		android:layout_height="430dp"
		android:layout_marginLeft="50dp" >

		<Button
			android:id="@+id/button5"
			android:layout_width="300dp"
			android:layout_height="280dp"
			android:layout_marginLeft="70dp"
			android:layout_marginTop="210dp"
			android:background="@drawable/icono_listar_ajuste_final"
			android:textColor="@drawable/white"
			android:textSize="28sp"
			android:textStyle="bold"
			android:typeface="normal"
			android:visibility="visible" />

		<Button
			android:id="@+id/button6"
			android:layout_width="370dp"
			android:layout_height="250dp"
			android:layout_marginLeft="530dp"
			android:layout_marginTop="210dp"
			android:background="@drawable/icono_salir_final"
			android:textColor="@drawable/Blue"
			android:textSize="28sp"
			android:textStyle="bold|italic"
			android:typeface="normal"
			android:visibility="visible" />

		<ImageButton
		    android:id="@+id/imageButton1"
		    android:layout_width="330dp"
		    android:layout_height="255dp"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="40dp"
		    android:layout_marginTop="-30dp"
		    android:background="@drawable/nuevo_ajuste"
		    android:contentDescription="Nuevo Ajuste"
		    android:visibility="visible" />

		<ImageButton
		    android:id="@+id/imageButton2"
		    android:layout_width="320dp"
		    android:layout_height="250dp"
		    android:layout_alignParentRight="true"
		    android:layout_alignTop="@+id/imageButton1"
		    android:layout_marginLeft="40dp"
		    android:layout_marginTop="-30dp"
		    android:background="@drawable/icon_inma_final"
		    android:contentDescription="Copy Right"
		    android:visibility="visible" />

	</RelativeLayout>

</LinearLayout>