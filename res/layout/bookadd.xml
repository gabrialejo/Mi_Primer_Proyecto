<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<WebView android:orientation="horizontal" android:id="@+id/webview" android:layout_width="fill_parent" android:layout_height="fill_parent"/> 

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:text="Enter a new book" />

	<TextView android:id="@+id/titlelabel" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="5dp"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
		android:text="Title:" />
	<EditText android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="3dp"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp" />

	<TextView android:id="@+id/authorslabel" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="5dp"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
		android:text="Author(s) (comma sep):" />
	<EditText android:id="@+id/authors" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="3dp"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp" />

	<Button android:id="@+id/insertbutton" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="15dp"
		android:layout_marginBottom="30dp" android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp" android:text="Insert" />

</LinearLayout>
