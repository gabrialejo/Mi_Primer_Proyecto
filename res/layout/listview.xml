<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/paginalistado"
	android:orientation="vertical"
	tools:context=".Listado de Estimaciones" >

	<Button
		android:id="@+id/button1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="false"
		android:layout_alignParentTop="false"
		android:layout_marginLeft="720dp"
		android:layout_toRightOf="@id/title3"
		android:background="@drawable/regresar"
		android:textColor="@drawable/Blue"
		android:textSize="8sp"
		android:textStyle="bold|normal" />

	<Button
		android:id="@+id/button2"
		android:layout_width="55dp"
		android:layout_height="55dp"
		android:layout_marginLeft="800dp"
		android:layout_marginTop="-55dp"
		android:layout_toLeftOf="@id/button1"
		android:background="@drawable/nubeupload" />
	
	<ListView
		android:id="@android:id/list"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:cacheColorHint="@android:color/transparent"
		android:divider="@android:color/transparent"
		android:dividerHeight="3dp"
		android:listSelector="@android:color/transparent"
		android:paddingBottom="35dp"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:paddingTop="30dp"
		android:scrollbarStyle="outsideOverlay"
		android:smoothScrollbar="true" >
	
	</ListView>

</LinearLayout>
